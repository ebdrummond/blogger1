<html>
<head>
  <link href='http://fonts.googleapis.com/css?family=Patrick+Hand+SC' rel='stylesheet' type='text/css'>
</head>
<body>
<div>
  <%= form_for(@article, html: {multipart: true}) do |f| %>
    <ul>
    <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.label :tag_list %><br />
      <%= f.text_field :tag_list %>
    </p>
    <p>
      <% if @article.image.exists? %>
        <%= image_tag @article.image.url %><br />
        <%= f.label :image, "Attach another image" %><br />
      <% else %>
        <%= f.label :image, "Attach an image" %><br />
      <% end %>
        <%= f.file_field :image %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
<p><%= link_to "<< Back to Articles list", articles_path %></p>
</body>


<style type="text/css">
h1 {
  font-family: 'Patrick Hand SC', cursive;
  color :#31D45C;
  font-size: 50px;
  letter-spacing: 0.07em;
  text-shadow: 2px 2px 7px #9246C2;
}
h2{
  font-family: 'Patrick Hand SC', cursive;
  font-size: 30px;
}
p{
  font-family: arial;
  font-size: 16px;
}
</style>
</html>